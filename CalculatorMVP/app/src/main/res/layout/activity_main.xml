<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_total_color"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/textCalculation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="end|bottom"
            android:scrollHorizontally="true"
            android:maxLength="20"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="10dp"
            android:maxLength="20"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/background"
        android:gravity="center"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_color"
            android:onClick="onClickedNumber"
            android:padding="30dp"
            android:text="7"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/text7"
            android:background="@drawable/bg_color"
            android:onClick="onClickedNumber"
            android:padding="30dp"
            android:text="8"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/text8"
            android:background="@drawable/bg_color"
            android:onClick="onClickedNumber"
            android:padding="30dp"
            android:text="9"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/text9"
            android:background="@drawable/bg_blue"
            android:onClick="onClickedOperator"
            android:paddingStart="32dp"
            android:paddingTop="30dp"
            android:paddingEnd="32dp"
            android:paddingBottom="30dp"
            android:text="/"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text7"
            android:layout_margin="5dp"
            android:background="@drawable/bg_color"
            android:onClick="onClickedNumber"
            android:padding="30dp"
            android:text="4"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text8"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/text4"
            android:background="@drawable/bg_color"
            android:onClick="onClickedNumber"
            android:padding="30dp"
            android:text="5"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text9"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/text5"
            android:background="@drawable/bg_color"
            android:onClick="onClickedNumber"
            android:padding="30dp"
            android:text="6"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textMultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text9"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/text6"
            android:background="@drawable/bg_blue"
            android:onClick="onClickedOperator"
            android:padding="30dp"
            android:text="*"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text4"
            android:layout_margin="5dp"
            android:background="@drawable/bg_color"
            android:onClick="onClickedNumber"
            android:padding="30dp"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text5"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/text1"
            android:background="@drawable/bg_color"
            android:onClick="onClickedNumber"
            android:padding="30dp"
            android:text="2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text6"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/text2"
            android:background="@drawable/bg_color"
            android:onClick="onClickedNumber"
            android:padding="30dp"
            android:text="3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text6"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/text3"
            android:background="@drawable/bg_blue"
            android:onClick="onClickedOperator"
            android:padding="30dp"
            android:text="+"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textdot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_margin="5dp"
            android:background="@drawable/bg_color"
            android:paddingStart="32dp"
            android:paddingTop="30dp"
            android:paddingEnd="32dp"
            android:paddingBottom="30dp"
            android:text="."
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/textdot"
            android:background="@drawable/bg_color"
            android:onClick="onClickedNumber"
            android:padding="30dp"
            android:text="0"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/text0"
            android:background="@drawable/bg_color"
            android:paddingStart="22dp"
            android:paddingTop="30dp"
            android:paddingEnd="25dp"
            android:paddingBottom="30dp"
            android:text="Del"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textEquals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/textDel"
            android:background="@drawable/bg_blue"
            android:padding="30dp"
            android:text="="
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>